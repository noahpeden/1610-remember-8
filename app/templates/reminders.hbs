{{outlet}}
{{#if model}}
  {{#each model as |reminder|}}
    <ul>
      <h2>
        {{#link-to "reminders.reminder"
                   reminder.id
                   class='spec-reminder-item'}}
        {{reminder.title}}
        {{/link-to}}
      </h2>
    </ul>
  {{/each}}
{{else}}
  <h3 class="no-notes-display">No notes found.<br/>Click "New Reminder" to create a new note.</h3>
{{/if}}
{{#link-to "reminders.new" class="spec-view-form"}}
  New Reminder
{{/link-to}}
