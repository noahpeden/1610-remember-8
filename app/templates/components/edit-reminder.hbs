<h2 class='spec-edit-title' contenteditable="true" onkeyup={{action "update" this 'title' 0}}>{{model.title}}</h2>
<li class='spec-edit-date' contenteditable="true" onkeyup={{action "update" this 'date' 1}}>{{model.date}}</li>
<li class='spec-edit-notes' contenteditable="true" onkeyup={{action "update" this 'notes' 2}}>{{model.notes}}</li>
{{#link-to "reminders.reminder" model.id}}
  <button class="spec-save-button" {{action "save"}}>save</button>
{{/link-to}}
<button class="spec-reset-button" {{action "reset"}}>reset</button>
